# pnpm configuration for monorepo

# Auto-install peer dependencies
auto-install-peers=true

# Hoist all dependencies to node_modules root
# Required because workspace packages (@rag/ui, @rag/utils, @rag/api-client)
# export TypeScript source directly ("main": "./src/index.ts") and Vite
# needs their transitive dependencies resolvable from root.
# Note: This can cause phantom dependency issues where code accidentally
# imports packages not declared in its own package.json. Run `pnpm why <pkg>`
# to verify dependency chains when adding new imports.
shamefully-hoist=true

# Strict dependency resolution
strict-peer-dependencies=false
